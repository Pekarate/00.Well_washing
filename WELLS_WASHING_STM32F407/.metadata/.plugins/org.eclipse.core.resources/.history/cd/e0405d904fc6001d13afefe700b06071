#ifndef INC_MOTOR_H_
#define INC_MOTOR_H_

#include "main.h"
#include "stdint.h"


typedef enum
{
	DIR_FORWARD = 0,
	DIR_BACKWARD
}_motor_dir;
typedef struct{
	uint32_t current_pos;
	uint32_t next_pos;
	_motor_dir current_dir;
	int (*is_mt_home_pos)(void);
	void (*mt_set_dir)(_motor_dir);
	void (*mt_move_to_pos)(uint32_t);
	void (*mt_start)();
	void (*mt_stop)();
}_motor_typedef;

#endif /* INC_MOTOR_H_ */
