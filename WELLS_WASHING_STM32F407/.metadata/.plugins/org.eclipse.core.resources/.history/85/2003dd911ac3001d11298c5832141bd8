#ifndef INC_FLASH_H_
#define INC_FLASH_H_

#define SECTOR0_START_ADDRESS 0x08000000
#define SECTOR1_START_ADDRESS 0x08004000
#define SECTOR2_START_ADDRESS 0x08008000
#define SECTOR3_START_ADDRESS 0x0800C000
#define SECTOR4_START_ADDRESS 0x08010000
#define SECTOR5_START_ADDRESS 0x08020000
#define SECTOR6_START_ADDRESS 0x08040000
#define SECTOR7_START_ADDRESS 0x08060000

#define ADDR_FLASH_SECTOR_0     ((uint32_t)0x08000000) // Base address of Sector 0, 16 Kbytes
#define ADDR_FLASH_SECTOR_1     ((uint32_t)0x08004000) // Base address of Sector 1, 16 Kbytes
#define ADDR_FLASH_SECTOR_2     ((uint32_t)0x08008000) // Base address of Sector 2, 16 Kbytes
#define ADDR_FLASH_SECTOR_3     ((uint32_t)0x0800C000) // Base address of Sector 3, 16 Kbytes
#define ADDR_FLASH_SECTOR_4     ((uint32_t)0x08010000) // Base address of Sector 4, 64 Kbytes
#define ADDR_FLASH_SECTOR_5     ((uint32_t)0x08020000) // Base address of Sector 5, 128 Kbytes
#define ADDR_FLASH_SECTOR_6     ((uint32_t)0x08040000) // Base address of Sector 6, 128 Kbytes
#define ADDR_FLASH_SECTOR_7     ((uint32_t)0x08060000) // Base address of Sector 7, 128 Kbytes
#define ADDR_FLASH_SECTOR_8     ((uint32_t)0x08080000) // Base address of Sector 8, 128 Kbytes
#define ADDR_FLASH_SECTOR_9     ((uint32_t)0x080A0000) // Base address of Sector 9, 128 Kbytes
#define ADDR_FLASH_SECTOR_10    ((uint32_t)0x080C0000) // Base address of Sector 10, 128 Kbytes
#define ADDR_FLASH_SECTOR_11    ((uint32_t)0x080E0000) // Base address of Sector 11, 128 Kbytes


void write_to_flash(uint32_t address, uint8_t data[], uint32_t size);
void read_flash(uint32_t address, uint8_t* buffer, uint32_t length);

#endif /* INC_FLASH_H_ */
