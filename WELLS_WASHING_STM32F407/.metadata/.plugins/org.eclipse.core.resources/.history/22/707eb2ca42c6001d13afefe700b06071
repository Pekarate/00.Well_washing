#ifndef INC_MOTOR_H_
#define INC_MOTOR_H_

#include "main.h"
#include "stdint.h"

typedef enum
{
	DIR_FORWARD = 0,
	DIR_BACKWARD
}_motor_dir;
typedef struct{
	uint32_t current_pos;
	uint32_t next_pos;
	_motor_dir current_dir;
	void (*mt_set_dir(_motor_dir));
	void (*mt_move_to_pos(uint32_t));
};

#endif /* INC_MOTOR_H_ */
